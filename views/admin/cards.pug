extends ../layout.pug

block styles
    link(rel="stylesheet", href="/css/card.css")


block content
    section#content
        if cardBox.length > 0
            .container 
                .card-item
                    .add-new-wrapper
                        .button-wrapper
                            a.add-button(href="/admin/add-card") Add Card
                                
                    each card in cardBox
                        .card-wrapper
                            .button-wrapper
                                a.btn(href="/admin/edit-card/" + card.id + "?edit=true") Edit
                                form(action="/admin/cards/" + card.id method="POST")
                                    button.btn(type="submit") Delete
                                    input(type="hidden" value=card.id name="cardId")
                            h1 #{card.question}
                            h2 #{card.category}
                            p #{card.answer}
        else
            h1 There are no questions and answers in our system yet.
                    


    footer
        p= footer
        