extends ../layout.pug

block styles
    link(rel="stylesheet", href="/css/card.css")


block content
    section#content
        if cardBox.length > 0
            .container 
                .card-item
                    .add-new-wrapper
                        .button-wrapper
                            button.add-button(title="add new") +
                    each card in cardBox
                        .card-wrapper
                            .button-wrapper
                                a(href="/admin/edit-card/" + card.id + "?edit=true")
                                form(action="/admin/delete-card" method="POST")
                                    button(type="submit") Delete
                                    input(type="hidden" value=card.id name="cardId")
                            h1 #{card.question}
                            h2 #{card.category}
                            p #{card.answer}
                    


    footer
        p= footer
        